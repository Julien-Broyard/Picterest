{% extends 'base.html.twig' %}

{% block title 'Picterest' %}

{% block body %}
    <h1>{{ pluralize(pins|length, '%d Pin', '%d Pins', 'No Pins') }}</h1>

    {% for pin in pins %}
        <article>
            <h2>{{ pin.title }}</h2>
            <p>{{ pin.description }}</p>
        </article>
    {% endfor %}
{% endblock %}
